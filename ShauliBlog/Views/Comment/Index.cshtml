@model IEnumerable<ShauliBlog.Models.Comment>

@{
    ViewBag.Title = "Post Comments";
}

<h2>Post Comments</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PostRef.PostTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommentTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommentWriterName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommentWriterSiteUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommentTextContent)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PostRef.PostTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommentTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommentWriterName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommentWriterSiteUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommentTextContent)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>

  <br />

                      @using (Html.BeginForm())
                      {
                          @Html.AntiForgeryToken()

                          <div>
                              @Html.ActionLink("Back to Post Management", "Index", "Post")
                          </div>
                      }
