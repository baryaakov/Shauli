@model IEnumerable<ShauliBlog.Models.Post>

@{
    ViewBag.Title = "Posts Management";
}

<h2>Posts Management</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PostTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostWriterName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PostTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostWriterName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID }) | 
            @Html.ActionLink("Comments", "Index", "Comment", new { id = item.ID }, new { id = item.ID })
        </td>
    </tr>
}

</table>

